generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DownloadCount {
  id        String   @id @default(cuid())
  name      String
  email     String
  teamId    String
  teamName  String
  count     Int      @default(0)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  @@unique([email, name, teamId])
  @@map("downloadcount")
}

model Admin {
  id       String @id @default(cuid())
  name     String
  email    String @unique
  password String
}
